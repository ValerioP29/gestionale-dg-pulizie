APP_NAME="Gestionale DG Pulizie"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://example.com
VITE_API_URL=${APP_URL}

LOG_CHANNEL=stack
LOG_LEVEL=info

# Anomaly engine thresholds
ANOMALIES_LATE_GRACE_MINUTES=5
ANOMALIES_EARLY_LEAVE_GRACE_MINUTES=5
ANOMALIES_MIN_OVERTIME_MINUTES=30
ANOMALIES_MIN_SESSION_MINUTES=15
ANOMALIES_MAX_UNPAID_BREAK_MINUTES=120

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Cache e sessioni
CACHE_STORE=file
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="no-reply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Storage (local in dev, S3 in prod)
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-south-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum (aggiorna per staging/prod)
SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173
SESSION_DOMAIN=localhost
